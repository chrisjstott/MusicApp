<form action="<%= bands_url %>" method="post">

  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label for="band_name">Name</label>
  <input
    type="text"
    name="band[name]"
    id="band_name"
    value="<%= @band.name %>"
  >
  <br><br>

  <input type="submit" value="SUBMIT">
</form>
